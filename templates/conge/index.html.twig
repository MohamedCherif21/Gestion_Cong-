{% extends 'basefront.html.twig' %}

{% block title %}Conge index{% endblock %}

{% block body %}
    <h1>les demandes de cong√©</h1>

    <table border=2,class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employe_id</th>
                <th>Nom_Employe</th>
                <th>Datedepart</th>
                <th>Dateretour</th>
                <th>Nb_jours</th>
                <th>Type</th>
                <th>Motif</th>
                <th>ETAT</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conge in conges %}
            <tr>
                <td>{{ conge.id }}</td>
                <td>{{ conge.employe.id }}</td>
                <td>{{ conge.employe }}</td>
                <td>{{ conge.datedepart ? conge.datedepart|date('Y-m-d') : '' }}</td>
                <td>{{ conge.dateretour ? conge.dateretour|date('Y-m-d') : '' }}</td>
                <td>{{ conge.nbJours }}</td>
                <td>{{ conge.type }}</td>
                <td>{{ conge.motif }}</td>
                <td>{{ conge.etat }}</td>
                <td>
                    <a href="{{ path('app_conge_show', {'id': conge.id}) }}">show</a>
                    <a href="{{ path('app_conge_edit', {'id': conge.id}) }}">edit</a>
                </td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conge_new') }}">Create new</a>
{% endblock %}
